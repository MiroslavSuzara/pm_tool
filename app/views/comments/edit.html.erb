<h1>Edit Comments</h1>

<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@discussion, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: "form-control" %>
  </div>
  <br>
  
<%= f.submit %>
<% end %>
<!-- Delete button needs to be outside the form. -->
<%= button_to "Delete", @discussion_comment_path, method: :delete, data: {confirm: "Are you sure?"} %>
