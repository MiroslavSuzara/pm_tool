<h1>Projects</h1>
  <table class="table table-hover">
    <tr>    
      <th>Project</th>
      <th>Body</th>
      <th>Due Date</th>
      <th class="actions">Actions</th>
    </tr>
      <% @projects.each do |t| %>
    <tr>
      <td><%= t.title %></td>
      <td><%= t.description %></td>
      <td><%= t.due_date %></td>
      <td class="actions">
          <div class="btn-group">
            <%= link_to "Edit", edit_project_path(t), class: "btn btn-default" %> 
            <%= link_to "Delete", t, method: :delete, data:{confirm: "Are you sure you want to delete this request?"}, class: "btn btn-default" %> 
          </div>
          <% if t.status == false %>
              <%= link_to "Not Done", done_project_path(t), class: "btn btn-danger", method: :patch %>
            <% else %>
              <%= link_to "Done", done_project_path(t), class: "btn btn-success", method: :patch %>
            <% end %>
        </td>
    </tr>
  <% end %>
  </table>
  <hr>